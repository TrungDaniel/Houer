<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/img_bg_login_sign"
    android:id="@+id/ln_dang_nhap"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".DangNhapActivity">


    <EditText
        android:padding="5dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/edittext_custom"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/iciel_panton_light"
        android:textColor="@color/colorWhite"
        android:text="trungbn@gmail.com"
        android:hint="email"
        android:id="@+id/edt_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <EditText
        android:padding="5dp"
        android:layout_marginVertical="15dp"
        android:textColor="@color/colorWhite"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/edittext_custom"
        android:text="123456789"
        android:hint="pass"
        android:id="@+id/edt_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:layout_marginHorizontal="50dp"
        android:textSize="18dp"
        android:fontFamily="@font/iciel_panton_black"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_sign_up"
        android:id="@+id/btn_dang_nhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập" />
</LinearLayout>